@model List<EcomPortfolioVM>

@{
    ViewData["Title"] = "List Of Data";
}
<a class="btn btn-primary" asp-controller="Ecomportfolio" asp-action="Create">Create</a>
<div class="row">
    <div class="col-md-8 offset-2">
        <table class="table">
            <tr>
                <td>@Html.DisplayNameFor(Model =>Model.First().HeroTitle) </td>
                <td>@Html.DisplayNameFor(Model =>Model.First().HeroDescription) </td>
                <td>@Html.DisplayNameFor(Model =>Model.First().HeroButton) </td>
                <td>@Html.DisplayNameFor(Model =>Model.First().AboutTitle) </td>
                <td>@Html.DisplayNameFor(Model =>Model.First().AboutDescription) </td>
                <td>@Html.DisplayNameFor(Model =>Model.First().AboutImage) </td>
                <td>@Html.DisplayNameFor(Model =>Model.First().AboutVideos) </td>
                <td>@Html.DisplayNameFor(Model =>Model.First().CardTitle) </td>
                <td>@Html.DisplayNameFor(Model =>Model.First().CardDescription) </td>
                <td>@Html.DisplayNameFor(Model =>Model.First().CardButtonText) </td>
                <td>@Html.DisplayNameFor(Model =>Model.First().TotalClient) </td>
                <td>@Html.DisplayNameFor(Model =>Model.First().totalProject) </td>
                <td>@Html.DisplayNameFor(Model =>Model.First().TotalHours) </td>
                <td>@Html.DisplayNameFor(Model =>Model.First().TotalWorkers) </td>
                <td>@Html.DisplayNameFor(Model =>Model.First().MenuTitle) </td>
                <td>@Html.DisplayNameFor(Model =>Model.First().Menuvalue) </td>
                <td>@Html.DisplayNameFor(Model =>Model.First().TimeCategory) </td>
                <td>@Html.DisplayNameFor(Model =>Model.First().professorTitle) </td>
                <td>@Html.DisplayNameFor(Model =>Model.First().CardDescription) </td>
                <td>@Html.DisplayNameFor(Model =>Model.First().CardButtonText) </td>
                <td>Actions</td>
            </tr>

            @foreach (var abc in Model)
            {
                <tr>
                    <td> @Html.DisplayFor(Model => abc.HeroTitle)</td>
                    <td> @Html.DisplayFor(Model => abc.HeroDescription)</td>
                    <td> @Html.DisplayFor(Model => abc.HeroButton)</td>
                    <td> @Html.DisplayFor(Model => abc.TotalClient)</td>
                    <td> @Html.DisplayFor(Model => abc.AboutDescription)</td>
                    <td> @Html.DisplayFor(Model => abc.AboutImage)</td>
                    <td> @Html.DisplayFor(Model => abc.AboutVideos)</td>

                    <td> @Html.DisplayFor(Model => abc.CardTitle)</td>
                    <td> @Html.DisplayFor(Model => abc.CardDescription)</td>
                    <td> @Html.DisplayFor(Model => abc.CardButtonText)</td>
                    <td> @Html.DisplayFor(Model => abc.TotalClient)</td>
                    <td> @Html.DisplayFor(Model => abc.TotalHours)</td>
                    <td> @Html.DisplayFor(Model => abc.TotalWorkers)</td>
                    <td> @Html.DisplayFor(Model => abc.MenuTitle)</td>


                    <td> @Html.DisplayFor(Model => abc.Menuvalue)</td>
                    <td> @Html.DisplayFor(Model => abc.TimeCategory)</td>
                    <td> @Html.DisplayFor(Model => abc.professorTitle)</td>
                    <td> @Html.DisplayFor(Model => abc.CardDescription)</td>
                    <td> @Html.DisplayFor(Model => abc.CardButtonText)</td>

                    <td>
                        <a asp-action="Update" asp-route-id="@abc.Id">Edit</a>
                        <a asp-action="Delete" asp-route-id="@abc.Id">Delete</a>
                        <a asp-action="Details" asp-route-id="@abc.Id">Details</a>
                    </td>
                </tr>
            }


        </table>
    </div>
</div>